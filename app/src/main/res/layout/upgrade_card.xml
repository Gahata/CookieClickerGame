<?xml version="1.0" encoding="utf-8"?>
<card_view:android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/upgrade_card"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="36dp"
    card_view:cardCornerRadius="2dp"
    android:layout_marginBottom="8dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    card_view:contentPadding="8dp">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

            <TextView
            android:id="@+id/upgrade_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/building12_name"
            android:textColor="@color/md_black_1000"
            android:textSize="28sp"
            android:layout_gravity="end"
            android:layout_weight="1"/>

            <TextView
                android:id="@+id/upgrade_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/building12_name"
                android:textColor="@color/md_black_1000"
                android:textSize="28sp"
                android:layout_gravity="end"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp">

            <TextView
            android:id="@+id/upgrade_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="start"
            android:gravity="start"
            android:layout_weight="1"/>

            <TextView
            android:id="@+id/upgrade_purchase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="purchase"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/md_red_400"
            android:layout_gravity="end"
            android:layout_weight="0"/>

        </LinearLayout>

    </LinearLayout>

</card_view:android.support.v7.widget.CardView>